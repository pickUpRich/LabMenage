<page-meta root-font-size="system"/>
<view class="page" >
	<view class="weui-form">
		<view class="weui-form__control-area">
			<view class="weui-cells__group weui-cells__group_form">
				<view class="weui-cells__title">个人信息</view>
				<view class="weui-cells">
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd"><label class="weui-label">登录名</label></view>
						<view class="weui-cell__bd">
							<input class="weui-input" placeholder-class="weui-input__placeholder" value="{{info.loginName}}" disabled/>
						</view>
					</view>
          <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd">
              <label class="weui-label">昵称</label>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" placeholder-class="weui-input__placeholder" value="{{info.name}}" disabled/>
            </view>
          </view>
          <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd">
              <label class="weui-label">联系电话</label>
              <view class="weui-cell__desc"></view>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" placeholder-class="weui-input__placeholder" value="{{info.phone}}" disabled/>
            </view>
          </view>
          <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd">
              <label class="weui-label">邮箱</label>
              <view class="weui-cell__desc"></view>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" placeholder-class="weui-input__placeholder" value="{{info.email}}" disabled/>
            </view>
          </view>
          <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd">
              <label class="weui-label">登录时间</label>
              <view class="weui-cell__desc"></view>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" placeholder-class="weui-input__placeholder" value="{{loginTime}}" disabled/>
            </view>
          </view>
				</view>
			</view>
		</view>
		<view class="weui-form__opr-area">
			<a aria-role="button" class="weui-btn weui-btn_primary" bindtap="loginOut">退出</a>
		</view>
	</view>
</view>
