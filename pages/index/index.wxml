<!--index.wxml-->
<view class="main_box">
  <!-- 轮播图 -->
  <view class="swiper_box">
    <swiper indicator-dots="true" autoplay="true" interval="3000" duration="500">
      <block wx:for="{{ background }}" wx:key="*this">
        <swiper-item>
          <image src="{{ item }}"></image>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class="weui-flex">
    <view class="weui-flex__item">
      <button class="guid-button" style="width: 375rpx;" bindtap="toApply">
        <image class="icon-img" src="../../img/nav.png"></image>
        使用申请
      </button>
    </view>
  </view>
  <view class="weui-flex">
    <view class="weui-flex__item">
      <button class="guid-button" style="width: 375rpx;" bindtap="toQR">
        <image class="icon-img" src="../../img/classify_1.png" ></image>
        扫码查看
      </button>
    </view>
  </view>
  <view class="weui-flex">
    <view class="weui-flex__item">
      <button class="guid-button" style="width: 375rpx;" bindtap="toDevice">
        <image class="icon-img" src="../../img/classify_1.png" ></image>
        查看设备
      </button>
    </view>
  </view>
  <view class="weui-flex">
    <view class="weui-flex__item">
      <button class="guid-button" style="width: 375rpx;" bindtap="toRepair">
        <image class="icon-img" src="../../img/messageLogo.png" ></image>
        设备报修
      </button>
    </view>
  </view>
  <view class="weui-flex" >
    <view class="weui-flex__item">
      <button class="guid-button" style="width: 375rpx;" bindtap="toStudentApply">
        <image class="icon-img" src="../../img/messageLogo.png" ></image>
        学生申请
      </button>
    </view>
  </view>
</view>
<view wx:if="{{topTips}}" class="weui-toptips weui-toptips_warn fadeIn {{hide ? 'fadeOut' : ''}}">{{tipContent}}</view>