<page-meta root-font-size="system" />
<view class="swiper_box">
      <swiper indicator-dots="true" autoplay="true" interval="3000" duration="500">
        <block wx:for="{{ background }}" wx:key="*this">
          <swiper-item>
            <image src="{{ item }}"></image>
          </swiper-item>
        </block>
      </swiper>
    </view>
<view class="page" data-weui-theme="{{theme}}" data-weui-mode="{{mode}}">
  <view class="page__hd">
    您有新消息！
  </view>
  <view class="weui-grids">
    <navigator class="weui-grid" aria-role="button" url="/pages/apply/apply">
      <view class="weui-grid__icon">
        <image class="" src="../../img/nav.png"></image>
      </view>
      <view class="weui-grid__label">使用申请</view>
    </navigator>
    <navigator class="weui-grid" aria-role="button" url="/pages/apply/apply">
      <view class="weui-grid__icon">
        <image class="" src="../../img/classify_1.png"></image>
      </view>
      <view class="weui-grid__label">扫码查看</view>
    </navigator>
    <navigator class="weui-grid" aria-role="button" url="/pages/device/myDevice">
      <view class="weui-grid__icon">
        <image class="" src="../../img/classify_1.png"></image>
      </view>
      <view class="weui-grid__label">查看设备</view>
    </navigator>
    <navigator class="weui-grid" aria-role="button" url="/pages/deviceRepair/repair">
      <view class="weui-grid__icon">
        <image class="" src="../../img/messageLogo.png"></image>
      </view>
      <view class="weui-grid__label">设备报修</view>
    </navigator>
    <navigator class="weui-grid" aria-role="button" url="/pages/apply/studentApplyList">
      <view class="weui-grid__icon">
        <image class="" src="../../img/messageLogo.png"></image>
      </view>
      <view class="weui-grid__label">学生申请(设备、耗材申请)</view>
    </navigator>
  </view>
</view>

<view wx:if="{{topTips}}" class="weui-toptips weui-toptips_warn fadeIn {{hide ? 'fadeOut' : ''}}">{{tipContent}}</view>